{
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.parsecdn.com https://www.google-analytics.com https://api.twitch.tv; object-src 'self'",
  "name": "Retifier",
  "version": "{{APP_VERSION_CURRENT}}",
  "description": "Expand your Twitch experience",
  "background": {
    "persistent": true,
	  "page": "background.html"
  },
  "icons": {
  	"16": "/img/icon.png",
  	"48": "/img/icon.png",
  	"128": "/img/icon.png",
  	"256": "/img/icon.png",
    "512": "/img/icon.png"
  },
  "permissions": [
    "http://*.twitch.tv/",
    "https://*.twitch.tv/",
    "http://*.jtvnw.net/ttv-boxart/*",
    "https://api.parse.com/*",
    "notifications", "storage"
    ],
  "browser_action": {
    "default_title": "Who's online?",
    "default_icon": "/img/icon.png",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["auth.html"]
}
